/**标准16:9*/

.myPointer .card{width: 750rpx;height: 516rpx;flex:0 0 516rpx;}
.myPointer .card .cardBg{position: absolute;width: 100%;height: 100%;left: 0;top:0;}
.myPointer .card .avtar{border-radius: 100%;width: 240rpx;height: 240rpx;position: absolute;left: 253rpx;top:106rpx;}
.myPointer .card .nickName{color: #9cd5eb;font-size: 37rpx;position: absolute;left: 70rpx;top:58rpx;}
.myPointer .card .cardEle1{width: 162rpx;height: 88rpx;position: absolute;left: 500rpx;top:313rpx;}
.myPointer .card .cardEle2{width: 229rpx;height: 32rpx;position: absolute;left: 466rpx;top:432rpx;}
.myPointer .card .cardEle2 image{width: 100%;height: 100%;position: absolute;left: 0;top:0;}
.myPointer .card .cardEle2 text{font-size: 19rpx;text-align: center;position: relative;width: 100%;line-height: 31rpx;display: block;}
.myPointer .card .myPointer{position: absolute;left: 70rpx;top:356rpx;color: #8a8989;font-size: 24rpx;}
.myPointer .card .myPointer text{display: block;font-size: 49rpx;padding-top: 20rpx;}

.myPointer .title{text-align: center;font-size: 25rpx;color: #0b2b5d;font-weight: bold;padding: 43rpx 0 22rpx;}
.myPointer .tips{text-align: center;font-size: 20rpx;color: #9cd5eb;}

.myPointer .padm30{flex: auto;overflow: hidden;width: 100%;}

.myPointer .pickerbox{margin-top: .33rem;}
.myPointer .pickerbox .picker{line-height: 61rpx;font-size: 25rpx;color: #8a8989;width: 325rpx;text-align: center;}

.myPointer .scbox{position: absolute;top:228rpx;bottom:50rpx;border-radius: 0 0 18rpx 18rpx;width: 690rpx;}
.myPointer .scbox:before{border-radius: 0 0 18rpx 18rpx;}
.myPointer .pointerList{height:90%;}
.myPointer .pointerList .item{padding: 36rpx 30rpx;border-radius: 10rpx;border-bottom: #d6eaf3 2rpx solid;}
.myPointer .pointerList .item .tit{color: #8a8989;font-size: 23rpx;}
.myPointer .pointerList .item .tit .date{color: #8a8989;font-size: 15rpx;padding-top: 8rpx;display: block;}
.myPointer .pointerList .item .num{color: #9cd5eb;font-size: 23rpx;}

.myPointer .pointerList .item:last-child{border-bottom: none;}
.myPointer .arr{width: 36rpx;height: 23rpx;position: absolute;bottom: 35rpx;left: 50%;margin-left: -18rpx;}




