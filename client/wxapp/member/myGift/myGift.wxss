/**标准16:9*/
.myGift{height: 100%;}
.myGift .tabBox{width: 100%;height: 100%;position: absolute;left:0;top:0;}
.myGift .tabBox .tabTit{display: flex;width: 690rpx;margin: 41rpx auto 0;align-items: center;justify-content:center;padding: 0 20rpx; }
.myGift .tabBox .tabTit .item{height: 55rpx;background: #c0c0c0;transition:background .3s,color .3s;border-radius: 9rpx 9rpx  0 0;margin: 0 8rpx;font-size: 25rpx;letter-spacing: 7rpx;font-weight: bold;line-height: 55rpx;color: #fff;flex:auto;text-align: center;}
.myGift .showClass1 .tabTit .item:nth-child(1){color: #9cd5eb;background: rgba(255,255,255,.6);box-shadow: 7rpx -3rpx 7rpx 0rpx rgba(207,213,216,.5);}
.myGift .showClass2 .tabTit .item:nth-child(2){color: #9cd5eb;background: rgba(255,255,255,.6);box-shadow: 7rpx -3rpx 7rpx 0rpx rgba(207,213,216,.5);}
.myGift .showClass3 .tabTit .item:nth-child(3){color: #9cd5eb;background: rgba(255,255,255,.6);box-shadow: 7rpx -3rpx 7rpx 0rpx rgba(207,213,216,.5);}
.myGift .tabBox .tabCont{width: 690rpx;left: 27rpx; border-radius: 20rpx;padding: 21rpx 13rpx;overflow: hidden;position: absolute;top:96rpx;bottom:30rpx;box-shadow: 7rpx 3rpx 7rpx 0rpx rgba(207,213,216,.5);background: rgba(255,255,255,.6);}

.myGift .cashListCont{height: 95%;}
.myGift .list{display: none; }
.myGift .list .li{width: 683rpx;height: 218rpx;margin-bottom: 20rpx;}
.myGift .list .li .pic{width: 100%;height: 100%;}

.myGift .showClass1 .list1{display: block;}
.myGift .showClass2 .list2{display: block;}
.myGift .showClass3 .list3{display: block;}

