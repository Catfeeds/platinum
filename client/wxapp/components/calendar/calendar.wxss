/* pages/calendar/calendar.wxss */
.calendar-box{position:absolute;top:0;left:0;width:100%;height:100vh;background:rgba(0,0,0,0.5);z-index:999;padding-top:100rpx;box-sizing:border-box;transition:all 0.3s;opacity:0;}
.calendar-box.active{opacity:1;}
.viewbox{height: 100%;}
.calendar-wrapper{width:100%;border-top:1px #f5f5f5 solid;box-sizing:border-box;font-size:26rpx;transition:all 0.3s;transform:translateY(-100%);padding: 30rpx;}
.calendar-wrapper.active{transform:translateY(0%);}
.header{display:flex;justify-content:center;align-items:center;position:relative;height:100rpx;  /* width: 100%; */background:#fff;  /* padding: 0 30rpx; */z-index:10000;display: none;}
.top-jiantou{width:100rpx;height:100rpx;text-align:center;box-sizing:border-box;line-height:100rpx;}
.iconfont{display:flex;justify-content:center;align-items:center;position:relative;color:#52b8f5;width:53rpx;height:53rpx;}
.iconfont .left,.iconfont .right{display:block;width:0;height:0;border-top:20rpx solid transparent;border-bottom:20rpx solid transparent;}
.iconfont .left{border-right:40rpx solid transparent;}
.iconfont .right{border-left:40rpx solid transparent;}
.iconfont .left.color{border-right-color:#52b8f5;}
.iconfont .right.color{border-left-color:#52b8f5;}
.btn{margin:0 30rpx;width:240rpx;height:53rpx;border:1rpx solid #52b8f5;border-radius:26rpx;color:#52b8f5;font-size:26rpx;box-sizing:border-box;}
.calendar-panel{position:relative;display:flex;align-items:center;justify-content:center;font-size:25rpx;color: #0b2b5d;font-weight: bold;padding: 25rpx 0 30rpx;}
.backtoday{position:absolute;right:0;top:15rpx;padding:0 10rpx;padding-left:20rpx;height:50rpx;line-height:50rpx;border:1px #52b8f5 solid;border-right:none;font-size:28rpx;border-top-left-radius:50rpx;border-bottom-left-radius:50rpx;color:#52b8f5;background:rgba(82,184,245,0.1);display: none;}
.date-befor,.date-after{ display:none;justify-content:center;align-items:center;height:70rpx;width:70rpx;text-align:center;line-height:70rpx;}

/* .date-after {
    margin-left: 20rpx;
} */
.calendar-panel-box{display:flex;}
.calendar-header{display:flex;}
.calendar-header view{width:100%;text-align:center;line-height:70rpx;color:#fff;background: #0b2b5d;}
.calendar-body{display:flex;flex-wrap:wrap;padding: 12rpx 0;border:#9cd5eb 1rpx solid;border-radius:0 0 11rpx 11rpx;background:rgba(255,255,255,.6);box-shadow:rgba(0,0,0,.1) 2rpx 2rpx 10rpx 2rpx;}
.calender-body-date-week{display:flex;width:100%;}
.date{position:relative;width:100%;text-align:center;color:#1c1c1c;line-height:90rpx;z-index: 1;}
.date.active{background:red;}
.placeholder{color:#ccc;}
.date-current{color: #fff;}
.date-current:before{background:#9cd5eb;border-radius: 100%;width: 54rpx;height: 54rpx;content: '';position: absolute;left: 50%;top:50%;margin-top: -27rpx;margin-left: -27rpx;z-index:-1;}
.data-circle{position:absolute;bottom:10rpx;left:0;right:0;margin:auto;width:10rpx;height:10rpx;border-radius:50%;background:#ff5a5f;z-index:2;}

.btn1{width:286rpx;height:54rpx;background:none;border:none;box-shadow:none;outline:none;position: absolute;bottom: 70rpx;left: 50%;margin-left: -134rpx;}
.btn1 .btn1bg{position: absolute;width:100%;height:100%;left:0;top:0;}
.btn1 .btn1txt{text-align: center;position:relative;display: block;font-size: 25rpx;color:#0b2b5d;line-height: 52rpx;}


.flex-center{display:flex;align-items:center;justify-content:center;}