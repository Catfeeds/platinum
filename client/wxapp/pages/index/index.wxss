/** phonePanel start  */
.phonePanel {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0);
}

.phonePanelBox {
    width: 500rpx;
    height: 350rpx;
    background: #fff;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    margin: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 10rpx;
}

.phonePanel .phonePanelBox > view {
    font-size: 30rpx;
    color: #999;
}

.phonePanel .phonePanelBox .title {
    width: 100%;
    height: 100rpx;
    border-bottom: 2rpx solid #ebebeb;
    display: flex;
    align-items: center;
    justify-content: center;
}

.phonePanel .phonePanelBox .info {
    width: 100%;
    height: 150rpx;
    border-bottom: 2rpx solid #ebebeb;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
}

.phonePanel .phonePanelBox .info .tip {
    width: 90%;
    height: 100%;
    line-height: normal;
    padding-top: 15rpx;
}
.phonePanel .phonePanelBox .info .tip text{display: block}

.phonePanel .phonePanelBox .btn {
    width: 100%;
    height: 100rpx;
}

.phonePanel .phonePanelBox .btn button {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #3cc51f;
    font-size: 34rpx;
}

.phonePanel .phonePanelBox .btn button::after {
    border: none;
    background: transparent;
}
/** phonePanel end  */

