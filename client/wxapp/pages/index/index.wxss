/**标准16:9*/

.navigationBar .navbar {
    display: none;
}

.index {
    background: #0b2b5d;
}

.index .p1 {
    width: 100%;
    height: 775rpx;
}

.index .slogan {
    width: 277rpx;
    height: 218rpx;
    display: block;
    margin: 0 auto;
}

.index .txtbox {
    text-align: center;
    color: #fff;
    font-size: 18rpx;
}

.index .txtbox .checkbox {
    border: #fff 1px solid;
    width: 18rpx;
    height: 18rpx;
    margin-right: 16rpx;
    display: inline-block;
    vertical-align: middle;
}

.index .txtbox .checkbox:after {
    content: '';
    position: absolute;
    width: 5rpx;
    height: 10rpx;
    left: 4rpx;
    top: 0;
    border-bottom: #fff 1px solid;
    border-right: #fff 1px solid;
    transform: rotate(45deg);
    display: none;
}

.index .txtbox.active .checkbox:after {
    display: block;
}

.index .bottombox {
    height: calc(100% - 993rpx);
}

.index .btnbox {
    position: relative;
    width: 286rpx;
    height: 54rpx;
    margin: 57rpx auto 0;
}

.index .btnbox .btn1 {
    position: absolute;
    left: 0;
    top: 0;
}

